{
    "name": "hawraz/livewire-crud-generator",
    "description": "Laravel Livewire CRUD Generator - Quickly generate CRUD components for your Laravel Livewire application",
    "type": "library",
    "license": "MIT",

    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/hawraz93/livewire-crud-generator"
        }
    ],
    
    "authors": [
        {
            "name": "Hawraz Nawzad",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/console": "^10.0|^11.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Hawraz\\LivewireCrudGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hawraz\\LivewireCrudGenerator\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hawraz\\LivewireCrudGenerator\\LivewireCrudGeneratorServiceProvider"
            ]
        }
    },
    
    "minimum-stability": "dev",
    "prefer-stable": true
}